<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/area1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="#### 测试区域1 ####"
        android:textSize="12dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/area1"
        app:layout_constraintTop_toBottomOf="@+id/area1"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="默认的title"
        />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:textColor="	#FF8C00"
        android:text="9.0 分"
        />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_score"
        app:layout_constraintTop_toTopOf="@+id/tv_score"
        app:layout_constraintBottom_toBottomOf="@id/tv_score"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:textColor="	#000000"
        android:text="2022年"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_score"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textColor="	#808080"
        android:text="测试数据"
        />

    <Button
        android:id="@+id/bt_change1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:layout_marginTop="10dp"
        android:text="更改数据"
        android:textSize="10dp"
        android:background="#32CD32"
        />

</androidx.constraintlayout.widget.ConstraintLayout>